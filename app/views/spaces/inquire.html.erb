<h1>Inquiry for <%= @space.name %></h1>

<%= form_with url: submit_inquiry_space_path(@space), method: :post, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name, "Your Name" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :email, "Your Email" %>
    <%= form.email_field :email, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :message, "Your Message" %>
    <%= form.text_area :message, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit Inquiry", class: "btn btn-primary" %>
  </div>
<% end %>
